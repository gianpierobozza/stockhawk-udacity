<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WidgetListSymbolTextStyle">
        <item name="android:textSize">36sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
    </style>

    <style name="WidgetListPriceTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
    </style>

    <style name="WidgetListPercentTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WidgetListEmptyViewTextStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
    </style>
</resources>